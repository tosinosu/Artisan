<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/search_pix"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/search_pix"
        android:text="@string/business_name"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/search_pix"
        app:layout_constraintTop_toTopOf="@+id/search_pix" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_online"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_launcher_foreground"
        app:civ_border_color="#05df29"
        app:civ_border_width="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/search_pix"
        app:layout_constraintEnd_toEndOf="@+id/search_pix"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="@+id/search_pix"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_offline"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_launcher_foreground"
        app:civ_border_color="#bfbfbf"
        app:civ_border_width="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/search_pix"
        app:layout_constraintEnd_toEndOf="@+id/search_pix"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="@+id/search_pix" />

    <TextView
        android:id="@+id/message_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/business_name"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/search_pix"
        android:padding="6dp"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="@+id/business_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/business_name"
        app:layout_constraintTop_toBottomOf="@+id/business_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

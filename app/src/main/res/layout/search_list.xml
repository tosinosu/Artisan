<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/search_pix"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/bus_nam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/search_pix"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/search_pix"
        android:layout_toRightOf="@id/search_pix"
        android:text="@string/business_name"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toEndOf="@+id/search_pix"
        app:layout_constraintTop_toTopOf="@+id/search_pix" />

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bus_nam"
        android:layout_alignEnd="@+id/bus_nam"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/search_pix"
        android:layout_toRightOf="@id/search_pix"
        android:padding="6dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="@+id/search_pix"
        app:layout_constraintEnd_toEndOf="@+id/bus_nam"
        app:layout_constraintStart_toStartOf="@+id/bus_nam"
        app:layout_constraintTop_toBottomOf="@+id/bus_nam" />

    <TextView
        android:id="@+id/uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bus_nam"
        android:layout_alignEnd="@+id/bus_nam"
        android:layout_toEndOf="@+id/search_pix"
        android:layout_toRightOf="@id/search_pix"
        android:padding="6dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

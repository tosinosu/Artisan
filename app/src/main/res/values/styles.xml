<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorSecondary</item>
        <item name="colorSwitchThumbNormal">@color/colorOnSecondary</item>
        <item name="cornerRadius">4dp</item>
        <item name="checkedButton">@id/signin</item>
        <item name="android:foregroundTint">@color/colorOnPrimary</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="cornerRadius">4dp</item>
        <item name="checkedButton">@id/signin</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:foregroundTint">@color/colorWhite</item>
    </style>
    <style name="MaterialButton" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary" >@color/colorWhite</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorSecondary</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="cornerRadius">4dp</item>
        <item name="checkedButton">@id/signin</item>
    </style>

    <style name="SearchStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="editTextColor">#FFFFFF</item>
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="closeIcon">@drawable/ic_baseline_close_24</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="color">#4a4a4a</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Theme.FastScrollSample" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- If you set this in your theme, all FastScroller(Thumb)Views will use this style by default -->
        <item name="indicatorFastScrollerStyle">@style/Widget.FastScrollSample.FastScroller</item>
        <item name="indicatorFastScrollerThumbStyle">@style/Widget.FastScrollSample.FastScrollerThumb</item>
    </style>

    <!-- See the parent styles for more attributes -->

    <style name="Widget.FastScrollSample.FastScroller" parent="Widget.IndicatorFastScroll.FastScroller">
        <item name="fastScrollerIconColor">@color/pressed_selector</item>
        <item name="android:textColor">@color/pressed_selector</item>
    </style>

    <style name="Widget.FastScrollSample.FastScroller.Floating">
        <item name="fastScrollerIconColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/fastscroller_floating_background</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Widget.FastScrollSample.FastScrollerThumb" parent="Widget.IndicatorFastScroll.FastScrollerThumb" />

    <style name="Widget.FastScrollSample.FastScrollerThumb.Colorful">
        <item name="fastScrollerThumbColor">?colorAccent</item>
    </style>

    <!-- To see how these attributes are used, please visit https://material.io/develop/android/theming/color/ -->
    <style name="Base.Theme.Sunflower" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/sunflower_green_500</item>
        <item name="colorOnPrimary">@color/sunflower_yellow_500</item>
        <item name="colorPrimaryDark">@color/sunflower_green_700</item>
        <item name="colorOnSurface">@color/sunflower_black</item>
        <item name="colorAccent">@color/sunflower_green_700</item>
        <item name="colorSurface">@color/sunflower_gray_50</item>
        <item name="colorSecondary">@color/sunflower_yellow_500</item>
        <item name="android:colorBackground">@color/sunflower_green_500</item>
    </style>

    <style name="Theme.Sunflower" parent="Base.Theme.Sunflower"/>

    <style name="Theme.Sunflower.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Sunflower.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.Sunflower.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>

    </style>


    <!-- SplashActivity theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">#D4EBF2</item>
    </style>

</resources>
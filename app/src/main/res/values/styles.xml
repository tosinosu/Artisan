<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MaterialButton" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary" >@color/colorWhite</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="cornerRadius">4dp</item>
        <item name="checkedButton">@id/signin</item>
    </style>

    <style name="SearchStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="editTextColor">#FFFFFF</item>
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="closeIcon">@drawable/ic_baseline_close_24</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="color">#4a4a4a</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Theme.FastScrollSample" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- If you set this in your theme, all FastScroller(Thumb)Views will use this style by default -->
        <item name="indicatorFastScrollerStyle">@style/Widget.FastScrollSample.FastScroller</item>
        <item name="indicatorFastScrollerThumbStyle">@style/Widget.FastScrollSample.FastScrollerThumb</item>
    </style>

    <!-- See the parent styles for more attributes -->

    <style name="Widget.FastScrollSample.FastScroller" parent="Widget.IndicatorFastScroll.FastScroller">
        <item name="fastScrollerIconColor">@color/pressed_selector</item>
        <item name="android:textColor">@color/pressed_selector</item>
    </style>

    <style name="Widget.FastScrollSample.FastScroller.Floating">
        <item name="fastScrollerIconColor">?colorAccent</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:background">@drawable/fastscroller_floating_background</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Widget.FastScrollSample.FastScrollerThumb" parent="Widget.IndicatorFastScroll.FastScrollerThumb" />

    <style name="Widget.FastScrollSample.FastScrollerThumb.Colorful">
        <item name="fastScrollerThumbColor">?colorAccent</item>
    </style>

    <!-- To see how these attributes are used, please visit https://material.io/develop/android/theming/color/ -->
    <style name="Base.Theme.Sunflower" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/sunflower_green_500</item>
        <item name="colorOnPrimary">@color/sunflower_yellow_500</item>
        <item name="colorPrimaryDark">@color/sunflower_green_700</item>
        <item name="colorOnSurface">@color/sunflower_black</item>
        <item name="colorAccent">@color/sunflower_green_700</item>
        <item name="colorSurface">@color/sunflower_gray_50</item>
        <item name="colorSecondary">@color/sunflower_yellow_500</item>
        <item name="android:colorBackground">@color/sunflower_green_500</item>
    </style>

    <style name="Theme.Sunflower" parent="Base.Theme.Sunflower"/>

    <style name="Theme.Sunflower.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Sunflower.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.Sunflower.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>

    </style>


<!-- For FlutterWave-->

    <style name="TestNewTheme" parent="RaveAppTheme.NoActionBar">
        <item name="colorPrimary">#092342</item>
        <item name="colorPrimaryDark">#b71c1c</item>
        <item name="colorAccent">#7cb342</item>
        <item name="OTPButtonStyle">@style/otpBtnStyle2</item>
        <item name="PayButtonStyle">@style/payBtnStyle2</item>
        <item name="OTPHeaderStyle">@style/otpHeaderStyle2</item>
        <item name="TabLayoutStyle">@style/tabLayoutStyle2</item>
        <item name="PinHeaderStyle">@style/pinHeaderStyle2</item>
        <item name="SavedCardButtonStyle">@style/svdCardsBtnStyle2</item>
        <item name="PaymentTileStyle">@style/newPaymentTileStyle</item>
        <item name="PaymentTileTextStyle">@style/newPaymentTileTextStyle</item>
        <item name="PaymentTileDividerStyle">@style/newPaymentTileDividerStyle</item>
    </style>

    <style name="newPaymentTileTextStyle">
        <item name="android:textColor">#4a4a4a</item>
    </style>

    <style name="newPaymentTileDividerStyle">
        <item name="android:textColor">#4a4a4a</item>
    </style>

    <style name="newPaymentTileStyle">
        <item name="android:background">#99f9a825</item>
    </style>

    <style name="pinHeaderStyle2">
        <item name="android:background">#37474f</item>
    </style>

    <style name="otpBtnStyle2" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/otp_button_curved_2</item>
        <item name="android:textColor">#009688</item>
    </style>

    <style name="svdCardsBtnStyle2" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/blue_btn_curved</item>
        <item name="android:textColor">#039be5</item>
    </style>

    <style name="payBtnStyle2" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/green_btn_curved</item>
        <item name="android:textColor">#bcaaa4</item>
    </style>


    <!-- END -->


</resources>